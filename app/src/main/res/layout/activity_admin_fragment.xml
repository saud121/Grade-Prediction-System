<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragment"
    android:elevation="4dp"
    android:background="#fab209"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/backcard"
            android:elevation="10dp"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_local_florist_black_24dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Welcome to Grading Prediction System!"
                        android:textColor="#ffffffff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asim khan(Admin Officer)"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FICT Administration "
                        android:textSize="15sp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:elevation="10dp"
            android:id="@+id/l1"
            android:layout_marginTop="60dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/backgroundshape"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Please procced to your required info."
                android:textColor="#000000"
                android:background="#d5d5d5"
                android:gravity="center_horizontal" />
            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:background="#d5d5d5" />
            <Button
                android:id="@+id/addteacher"
                android:layout_marginTop="50dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonback"
                android:text="Add teacher"
                android:textColor="#000000"
                android:elevation="10dp"
                android:padding="5dp"
                android:drawableLeft="@drawable/ic_teacher_add_black_24dp"
                />
            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:background="#d5d5d5" />

            <Button
                android:id="@+id/addstudent"
                android:drawableLeft="@drawable/ic_group_add_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonback"
                android:text="ADD Students"
                android:textColor="#000000"
                android:elevation="10dp"
                android:padding="5dp"

                />
            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:background="#d5d5d5" />

            <Button
                android:id="@+id/Courses"
                android:drawableLeft="@drawable/ic_note_add_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonback"
                android:text="Add course"
                android:textColor="#000000"
                android:elevation="10dp"
                android:padding="5dp"
                />

            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:background="#d5d5d5"
                />
            <Button
                android:id="@+id/teacherc"
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonback"
                android:text="assign course to teacher"
                android:textColor="#000000"
                android:elevation="10dp"
                android:padding="5dp"
                />
            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:background="#d5d5d5" />

            <Button
                android:id="@+id/enroll"
                android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonback"
                android:text="Enroll student in course"
                android:textColor="#000000"
                android:elevation="10dp"
                android:padding="5dp"
                />
            <View

                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:background="#d5d5d5"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>